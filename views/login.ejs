<!DOCTYPE html>
<html lang="en">

  <body>
    <h1>Login</h1>
    <form action="/users/register" method="POST">
      <div>
        <input type="text" id="username" name="username" placeholder="Username" required />
      </div>
      <div>
        <input
          type="email"
          id="email"
          name="email"
          placeholder="Email"
          required
        />
      </div>
      <div>
        <input
          type="password"
          id="password2"
          name="password2"
          placeholder="Confirm Password"
          required
        />
      </div>
      <div>
        <input type="submit" value="Register" />
      </div>
    </form>
  </body>
</html>